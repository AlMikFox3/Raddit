<h1>Listing links</h1>
<style>
table {
    border-collapse: collapse;
}

td {
    padding-top: .5em;
    padding-bottom: .5em;
    padding-left: .5em;
    padding-right: .5em;
}
</style>

<table>
  <thead>
    <tr>
      <th>Title  </th>
      <th>Url  </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.title   %></td>
        <td><%= link.url   %></td>
        <td><%= link_to ' Show ', link %></td>
        <% if link.user == current_user %>
          <td><%= link_to ' Edit ', edit_link_path(link) %></td>
          <td><%= link_to ' Destroy ', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
